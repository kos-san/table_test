<%= link_to "登録", new_user_path, type: "button" , class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">名前</th>
      <th scope="col">check</th>
      <th scope="col">checkがtrueの場合"✔"マークが表示される</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"> <%= user.id %> </th>
        <td> <%= user.name %> </td>
        <td>
          <% if user.check == true %>
            ✔
          <% end %> 
        </td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>